{
    "manifest_version": 2,
    "name": "Home Manager Options Search Engine",
    "description": "Adds Home Manager options search engine",
    "version": "1.0",
    "author": "Liam Wood-Baker",
    "homepage_url": "https://github.com/liamwb/firefox-home-manager-options-extension",
    "developer": {
      "name": "Liam Wood-Baker",
      "url": "https://github.com/liamwb"
    },
    "chrome_settings_overrides": {
      "search_provider": {
        "name": "Home-Manager Options",
        "search_url":"https://home-manager-options.extranix.com/?query={searchTerms}",
        "keyword": "@hm-opts",
        "favicon_url": "https://home-manager-options.extranix.com/favicon.ico",
        "is_default": false,
        "encoding": "UTF-8"
      }
    }
}
